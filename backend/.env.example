# Backend Environment Configuration

# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development

# Database Configuration
DB_PATH=./data/shimmy.db

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# API Configuration
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000

# External Services
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=30000

SHIMMY_HOST=http://localhost:8080
SHIMMY_TIMEOUT=30000

# Docker Integration
DOCKER_HOST=
DOCKER_CERT_PATH=
DOCKER_TLS_VERIFY=

# Kubernetes Integration
KUBECONFIG=
KUBE_NAMESPACE=default

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./data/logs/shimmy-backend.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# WebSocket Configuration
WS_PING_INTERVAL=30000
WS_PONG_TIMEOUT=5000

# System Monitoring
METRICS_COLLECTION_INTERVAL=10000
METRICS_RETENTION_HOURS=168

# Security
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=
TRUST_PROXY=false

# Development
ENABLE_DEBUG=false
ENABLE_SWAGGER=true